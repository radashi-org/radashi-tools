{
  "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
  "extends": ["@radashi-org/biome-config"],
  "files": {
    "include": ["**/*.mjs", "**/*.js"]
  },
  "linter": {
    "rules": {
      "performance": {
        "noDelete": "off"
      },
      "complexity": {
        "noForEach": "off",
        "useLiteralKeys": "off"
      },
      "style": {
        "useImportType": "warn",
        "noUnusedTemplateLiteral": "off"
      }
    }
  }
}
